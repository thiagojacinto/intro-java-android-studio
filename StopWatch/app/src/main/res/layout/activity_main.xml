<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#211D44">

    <ImageView
        android:id="@+id/imageViewSplash"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/icget"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textViewSplash"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="14dp"
        android:text="It's your turn"
        android:textAlignment="center"

        android:textColor="#E1E1E3"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGetStarted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSplash" />

    <TextView
        android:id="@+id/textViewSubSplash"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_paddingRight="10dp"
        android:layout_paddingLeft="10dp"


        android:lineSpacingExtra="10dp"
        android:text="Time is the key to control Android App developing abilities."
        android:textAlignment="center"
        android:textColor="#A3A2AD"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGetStarted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSplash" />

    <Button
        android:id="@+id/buttonGetStarted"
        android:layout_width="271dp"
        android:layout_height="43dp"

        android:background="@drawable/bigbuttongreen"
        android:text="Get started"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="619dp" />

    <!--    import the created radius button -->
        android:background="@drawable/bigbuttongreen"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>